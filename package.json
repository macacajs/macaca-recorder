{
  "name": "macaca-recorder",
  "version": "0.1.10",
  "description": "auto create e2e test",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts" ,
  "files": [
    "assets/**/*.js",
    "assets/**/*.css",
    "assets/**/*.html",
    "lib/**/*.js",
    "lib/**/*.ts",
    "bin/**/*.js"
  ],
  "scripts": {
    "prepublishOnly": "npm run clean && npm run gen-protocol-api && rollup -c && ttsc -p tsconfig-esm.json && ttsc -p tsconfig-cjs.json",
    "build:web": "rollup -c -w",
    "dev:node": "nodemon cli/macaca-recorder.ts run $MACACA_RECORDER_TARGET_URL $OPT",
    "gen-protocol-api": "ts-node scripts/gen-protocol-api.ts",
    "clean": "ts-node scripts/clean.ts",
    "test": "rollup -c && c8 --reporter=lcov --reporter=text mocha --reporter spec --require ts-node/register test/**/*.test.ts",
    "dev": "concurrently \"npm run build:web\" \"npm run dev:node\"",
    "lint": "eslint . --fix && stylelint --fix ./**/*.less -s less",
    "contributor": "git-contributor"
  },
  "bin": {
    "macaca-recorder": "./bin/macaca-recorder.js"
  },
  "dependencies": {
    "@types/mime": "^2.0.3",
    "@types/node": "^18.0.6",
    "commander": "^9.4.1",
    "microtemplate": "^2.0.1",
    "mime": "^3.0.0",
    "moment": "^2.29.4",
    "npm-update": "3",
    "playwright": "1",
    "playwright-core": "1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-html": "^1.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.5",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "c8": "^7.12.0",
    "chai": "^4.3.6",
    "chalk": "^4.1.2",
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "git-contributor": "1",
    "mocha": "10",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.78.0",
    "rollup-plugin-less": "^1.1.3",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "12",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "ttypescript": "^1.5.15",
    "typescript-transform-paths": "^3.4.5"
  },
  "license": "MIT"
}
